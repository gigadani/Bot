# top-most EditorConfig file
root = true

# Global settings
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# C# code style and analyzer rules
[*.cs]
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

# Prefer braces for all control statements (no one-liners)
csharp_prefer_braces = true:error
dotnet_diagnostic.IDE0011.severity = error

# Prefer 'var' when the type is obvious
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_elsewhere = false:suggestion

# Expression-bodied members for simple accessors
csharp_style_expression_bodied_properties = true:suggestion
csharp_style_expression_bodied_accessors = true:suggestion

# Private fields should be _camelCase
dotnet_naming_rule.private_fields_should_be_underscored.symbols = private_fields
dotnet_naming_rule.private_fields_should_be_underscored.style = underscore_prefix
dotnet_naming_rule.private_fields_should_be_underscored.severity = suggestion

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private

dotnet_naming_style.underscore_prefix.required_prefix = _
dotnet_naming_style.underscore_prefix.capitalization = camel_case
